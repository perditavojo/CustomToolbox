<Window x:Class="CustomToolbox.WMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:windowsForms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    xmlns:converters="clr-namespace:CustomToolbox.Common.Converters"
    xmlns:properties="clr-namespace:CustomToolbox.Properties"
    xmlns:tb="clr-namespace:H.NotifyIcon;assembly=H.NotifyIcon.Wpf"
    xmlns:asf="clr-namespace:AirspaceFixer;assembly=AirspaceFixer"
    mc:Ignorable="d"
    Title="WMain"
    MinHeight="600"
    MinWidth="900"
    FontSize="14"
    Loaded="WMain_Loaded"
    Closing="WMain_Closing"
    KeyDown="WMain_KeyDown">
    <Window.Resources>
        <converters:WidthConverter x:Key="WidthConverter" />
        <converters:WidthToMarginLeftConverter x:Key="WidthToMarginLeftConverter" />
    </Window.Resources>
    <Grid x:Name="GFrame">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Menu x:Name="MMenuBar"
            Grid.Row="0"
            VerticalAlignment="Top">
            <MenuItem x:Name="MIFileMenu"
                 Header="{DynamicResource MIFile}">
                <MenuItem x:Name="MILoadClipListFile"
                    Header="{DynamicResource MILoadClipListFile}"
                    Click="MILoadClipListFile_Click" />
                <MenuItem x:Name="MISaveClipListFile"
                    Header="{DynamicResource MISaveClipListFile}"
                    Click="MISaveClipListFile_Click" />
                <Separator />
                <MenuItem x:Name="MIExit"
                    Header="{DynamicResource MIExit}"
                    Click="MIExit_Click" />
            </MenuItem>
            <MenuItem x:Name="MIFoldersMenu"
                 Header="{DynamicResource MIFoldersMenu}">
                <MenuItem x:Name="MIOpenBinsFolder"
                    Header="{DynamicResource MIOpenBinsFolder}"
                    Click="MIOpenBinsFolder_Click" />
                <MenuItem x:Name="MIOpenConfigFolder"
                    Header="{DynamicResource MIOpenConfigFolder}"
                    Click="MIOpenConfigFolder_Click" />
                <MenuItem x:Name="MIOpenDownloadsFolder"
                    Header="{DynamicResource MIOpenDownloadsFolder}"
                    Click="MIOpenDownloadsFolder_Click" />
                <MenuItem x:Name="MIOpenCliplistsFolder"
                    Header="{DynamicResource MIOpenCliplistsFolder}"
                    Click="MIOpenCliplistsFolder_Click" />
                <MenuItem x:Name="MIOpenLogsFolder"
                    Header="{DynamicResource MIOpenLogsFolder}"
                    Click="MIOpenLogsFolder_Click" />
                <MenuItem x:Name="MIOpenLyricsFolder"
                    Header="{DynamicResource MIOpenLyricsFolder}"
                    Click="MIOpenLyricsFolder_Click" />
            </MenuItem>
            <MenuItem x:Name="MICancel"
                Header="{DynamicResource MICancel}"
                IsEnabled="False"
                IsEnabledChanged="MICancel_IsEnabledChanged"      
                Click="MICancel_Click" />
            <MenuItem x:Name="MIAboutMenu"
                Header="{DynamicResource MIAbout}">
                <MenuItem x:Name="MICheckUpdate"
                    Header="{DynamicResource MICheckUpdate}"
                    Click="MICheckUpdate_Click" />
                <MenuItem x:Name="MIAbout"
                    Header="{DynamicResource MIAbout}"
                    Click="MIAbout_Click" />
            </MenuItem>
        </Menu>
        <Grid x:Name="GContent"
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="RDGContentRow1"
                    MinHeight="200"
                    Height="{Binding Source={x:Static properties:Settings.Default},
                        Path=RDGContentRow1Height,
                        Mode=TwoWay}" />
                <RowDefinition x:Name="RDGContentRow2"
                    Height="Auto" />
                <RowDefinition x:Name="RDGContentRow3"
                    MinHeight="100"
                    Height="{Binding Source={x:Static properties:Settings.Default},
                    Path=RDGContentRow3Height,
                    Mode=TwoWay}" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="CDGContentCol1"
                    MinWidth="560"
                    Width="{Binding Source={x:Static properties:Settings.Default},
                        Path=CDGContentCol1Width,
                        Mode=TwoWay}" />
                <ColumnDefinition x:Name="CDGContentCol2"
                    Width="auto" />
                <ColumnDefinition x:Name="CDGContentCol3"
                    MinWidth="430"
                    Width="{Binding Source={x:Static properties:Settings.Default},
                        Path=CDGContentCol3Width,
                        Mode=TwoWay}" />
            </Grid.ColumnDefinitions>
            <TabControl x:Name="TCTabBar"
                Grid.Row="0"
                Grid.RowSpan="3"
                Grid.Column="0"
                SelectionChanged="TCTabBar_SelectionChanged">
                <TabItem x:Name="TIClipPlayer"
                    Header="{DynamicResource TIClipPlayer}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="RDTIClipPlayerRow1"
                                MinHeight="200"
                                Height="{Binding Source={x:Static properties:Settings.Default},
                                Path=RDTIClipPlayerRow1Height,
                                Mode=TwoWay}" />
                            <RowDefinition x:Name="RDTIClipPlayerRow2"
                                Height="Auto" />
                            <RowDefinition x:Name="RDTIClipPlayerRow3"
                                MinHeight="200"
                                Height="{Binding Source={x:Static properties:Settings.Default},
                                Path=RDTIClipPlayerRow3Height,
                                Mode=TwoWay}" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <asf:AirspacePanel x:Name="APPanel"
                            Grid.Row="0">
                            <WindowsFormsHost x:Name="WFHContainer">
                                <windowsForms:Panel x:Name="PlayerHost"
                                    BackColor="Gray"
                                    Dock="Fill"
                                    MouseDoubleClick="PlayerHost_MouseDoubleClick" />
                            </WindowsFormsHost>
                        </asf:AirspacePanel>
                        <GridSplitter Grid.Row="1"
                            Grid.Column="2"
                            Height="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center" />
                        <StackPanel Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,0,0,0">
                            <Label x:Name="LClipTitle"
                                Margin="5,5,5,5"
                                Content="{DynamicResource LClipTitle}"
                                ToolTip="{DynamicResource LClipTitleToolTip}" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <ProgressBar x:Name="PBDuration"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Margin="5,5,25,10"
                                    MinWidth="288"
                                    MaxHeight="10"
                                    Minimum="0"
                                    Value="0"
                                    Maximum="100"
                                    ToolTip="{DynamicResource PBDuration}" />
                                <Label x:Name="LDuration"
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Margin="-20,5,5,10"
                                    Content="00:00:00 / 00:00:00"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    ToolTip="{DynamicResource LDuration}" />
                                <Slider x:Name="SSeek"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Margin="5,10,0,0"
                                    Width="{Binding ElementName=PBDuration, Path=ActualWidth}"
                                    Minimum="0"
                                    Value="0"
                                    IsSnapToTickEnabled="True"
                                    IsMoveToPointEnabled="True"
                                    TickFrequency="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    ToolTip="{DynamicResource SSeek}"
                                    ValueChanged="SSeek_ValueChanged"
                                    Thumb.DragStarted="SSeek_DragStarted"
                                    Thumb.DragCompleted="SSeek_DragCompleted" />
                                <Label x:Name="LVolume"
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="5,-3,5,5"
                                    Content="100"
                                    ToolTip="{DynamicResource LVolume}"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Top" />
                                <Slider x:Name="SVolume"
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="5,10,5,5"
                                    ToolTip="{DynamicResource SVolume}"
                                    Minimum="0"
                                    Value="100"
                                    Maximum="100"
                                    IsSnapToTickEnabled="True"
                                    IsMoveToPointEnabled="True"
                                    TickFrequency="1"
                                    VerticalAlignment="Center"
                                    ValueChanged="SVolume_ValueChanged" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    Margin="5,5,5,5">
                                    <CheckBox x:Name="CBNoVideo"
                                        Margin="5,0,0,0"
                                        Content="{DynamicResource CBNoVideo}"
                                        VerticalContentAlignment="Center"
                                        Checked="CBNoVideo_Checked"
                                        Unchecked="CBNoVideo_Unchecked" />
                                    <CheckBox x:Name="CBChromaKey"
                                        Margin="5,0,0,0"
                                        Content="{DynamicResource CBChromaKey}"
                                        VerticalContentAlignment="Center"
                                        Checked="CBChromaKey_Checked"
                                        Unchecked="CBChromaKey_Unchecked" />
                                    <ComboBox x:Name="CBYTQuality"
                                        Margin="5,0,0,0"
                                        ToolTip="{DynamicResource CBYTQuality}"
                                        VerticalContentAlignment="Center"
                                        SelectionChanged="CBYTQuality_SelectionChanged">
                                        <ComboBoxItem Content="{DynamicResource CBYTQualityHighest}" />
                                        <ComboBoxItem Content="1080P" />
                                        <ComboBoxItem Content="720P" />
                                        <ComboBoxItem Content="480P" />
                                        <ComboBoxItem Content="360P" />
                                        <ComboBoxItem Content="240P" />
                                        <ComboBoxItem Content="144P" />
                                    </ComboBox>
                                    <ComboBox x:Name="CBPlaybackSpeed"
                                        Margin="5,0,0,0"
                                        ToolTip="{DynamicResource CBPlaybackSpeed}"
                                        VerticalContentAlignment="Center"
                                        SelectionChanged="CBSpeed_SelectionChanged">
                                        <ComboBoxItem Content="2x" />
                                        <ComboBoxItem Content="1.75x" />
                                        <ComboBoxItem Content="1.5x" />
                                        <ComboBoxItem Content="1.25x" />
                                        <ComboBoxItem
                                            Content="{DynamicResource CBPlaybackSpeedNormal}" />
                                        <ComboBoxItem Content="0.75x" />
                                        <ComboBoxItem Content="0.5x" />
                                        <ComboBoxItem Content="0.25x" />
                                    </ComboBox>
                                </StackPanel>
                                <Button x:Name="BtnMute"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    Content="{DynamicResource BtnMute}"
                                    HorizontalAlignment="Right"
                                    Click="BtnMute_Click" />
                            </Grid>
                            <StackPanel Orientation="Horizontal"
                                Margin="5,5,5,5">
                                <Button x:Name="BtnPlay"
                                    Margin="5,0,0,0"
                                    Content="{DynamicResource BtnPlay}"
                                    Click="BtnPlay_Click" />
                                <Button x:Name="BtnPrevious"
                                    Margin="5,0,0,0"
                                    Content="{DynamicResource BtnPrevious}"
                                    IsEnabled="False"
                                    Click="BtnPrevious_Click" />
                                <Button x:Name="BtnNext"
                                    Margin="5,0,0,0"
                                    Content="{DynamicResource BtnNext}"
                                    IsEnabled="False"
                                    Click="BtnNext_Click" />
                                <Button x:Name="BtnPause"
                                    Margin="5,0,0,0"
                                    Content="{DynamicResource BtnPause}"
                                    IsEnabled="False"
                                    Click="BtnPause_Click"/>
                                <Button x:Name="BtnStop"
                                    Margin="5,0,0,0"
                                    Content="{DynamicResource BtnStop}"
                                    IsEnabled="False"
                                    Click="BtnStop_Click" />
                                <RadioButton x:Name="RBClipPlayer" 
                                    Margin="5,0,0,0"
                                    Checked="RBClipPlayer_Checked"
                                    Content="{DynamicResource ClipPlayer}"/>
                                <RadioButton x:Name="RBTimestampEditor" 
                                    Margin="5,0,0,0"
                                    Checked="RBTimestampEditor_Checked"
                                    Content="{DynamicResource TimestampEditor}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem x:Name="TINetResource"
                    Header="{DynamicResource TINetResource}">
                    <Grid>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <GroupBox x:Name="GBClipList"
                                    Header="{DynamicResource GBClipList}"
                                    Margin="5,5,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Width="430">
                                    <Grid>
                                        <Label x:Name="LNetPlaylists"
                                            Content="{DynamicResource LNetPlaylists}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top" />
                                        <ComboBox x:Name="CBNetPlaylists"
                                            Margin="0,30,0,0"
                                            Width="411"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Left"  />
                                        <CheckBox x:Name="CBAutoLyric"
                                            Margin="0,56,0,0"
                                            Content="{DynamicResource CBEnableAutoLyric}"
                                            ToolTip="{DynamicResource CBEnableAutoLyricToolTip}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Checked="CBAutoLyric_Checked"
                                            Unchecked="CBAutoLyric_Unchecked" />
                                        <Label x:Name="LLocalClipLists"
                                            Margin="0,76,0,0"
                                            Content="{DynamicResource LLocalClipLists}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top" />
                                        <ComboBox x:Name="CBLocalClipLists"
                                            Margin="0,106,0,0"
                                            Width="411"
                                            VerticalAlignment="Top" 
                                            HorizontalAlignment="Left"  />
                                        <Button x:Name="BtnRefreshNetResurce"
                                            Margin="0,134,0,5"
                                            Content="{DynamicResource BtnRefreshNetResurce}"
                                            HorizontalAlignment="Left"
                                            Click="BtnRefreshNetResurce_Click" />
                                        <Button x:Name="BtnLoadClipList"
                                            Margin="326,135,0,5"
                                            HorizontalAlignment="Left"
                                            Content="{DynamicResource BtnLoadClipList}"
                                            Click="BtnLoadClipList_Click" />
                                    </Grid>
                                </GroupBox>
                                <GroupBox x:Name="GBB23ClipListGenerator"
                                    Header="{DynamicResource GBB23ClipListGenerator}"
                                    Margin="5,197,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Height="290"
                                    Width="430">
                                    <Grid>
                                        <Label Margin="0,0,0,0"
                                            Content="{DynamicResource LB23UserMID}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top" />
                                        <Button x:Name="BtnB23CopyMID"
                                           Margin="0,5,10,0"
                                           Content="{DynamicResource BtnB23CopyMID}"
                                           ToolTip="{DynamicResource BtnB23CopyMIDToolTip}"
                                           VerticalAlignment="Top" 
                                           HorizontalAlignment="Right"
                                           Click="BtnB23CopyMID_Click" />
                                        <TextBox x:Name="TBB23UserMID"
                                            Margin="0,30,0,0"
                                            Width="411"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Left" />
                                        <Label Margin="0,52,0,0"
                                            Content="{DynamicResource LB23ClipListExcludedPhrases}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top" />
                                        <TextBox x:Name="TBB23ClipListExcludedPhrases"
                                            Margin="0,82,0,0"
                                            MinHeight="150"
                                            Width="411"
                                            ToolTip="{DynamicResource LB23ClipListExcludedPhrasesToolTip}"
                                            VerticalAlignment="Top"
                                            TextWrapping="NoWrap"
                                            AcceptsReturn="True"
                                            HorizontalScrollBarVisibility="Auto"
                                            VerticalScrollBarVisibility="Visible"
                                            HorizontalAlignment="Left" 
                                            TextChanged="TBB23ClipListExcludedPhrases_TextChanged" />
                                        <CheckBox x:Name="CBB23ClipListExportJsonc"
                                            Margin="0,237,0,5"
                                            Content="{DynamicResource CBB23ClipListExportJsonc}"
                                            ToolTip="{DynamicResource CBB23ClipListExportJsoncToolTip}"
                                            HorizontalAlignment="Left" />
                                        <CheckBox x:Name="CBB23ClipListCheckUrl"
                                            Margin="117,237,330,5"
                                            Content="{DynamicResource CBB23ClipListCheckUrl}"
                                            ToolTip="{DynamicResource CBB23ClipListCheckUrlToolTip}" />
                                        <Button x:Name="BtnGenerateB23ClipList"
                                            Margin="273,238,10,5"
                                            Content="{DynamicResource BtnGenerateB23ClipList}"
                                            Click="BtnGenerateB23ClipList_Click" />
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem x:Name="TIClipTool" Header="{DynamicResource TIClipTool}">
                    <Grid>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <GroupBox x:Name="GBWebTools"
                                    Margin="5,5,5,5"
                                    Header="{DynamicResource GBWebTools}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top">
                                    <Grid>
                                        <Button x:Name="BtnSubtitleCreator"
                                            Margin="0,0,0,0"
                                            Content="{DynamicResource BtnSubtitleCreator}"
                                            ToolTip="{DynamicResource BtnSubtitleCreatorToolTip}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Click="BtnSubtitleCreator_Click" />
                                        <Button x:Name="BtnYTSecConverter"
                                            Margin="0,24,0,0"
                                            Content="{DynamicResource BtnYTSecConverter}"
                                            ToolTip="{DynamicResource BtnYTSecConverterToolTip}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Click="BtnYTSecConverter_Click" />
                                    </Grid>
                                </GroupBox>
                                <GroupBox x:Name="GBFFmpegFunctions"
                                    Margin="5,75,0,0"
                                    Header="{DynamicResource GBFFmpegFunctions}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top">
                                    <Grid>
                                        <StackPanel Margin="0,0,0,0"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top">
                                            <Button x:Name="BtnBurnInSubtitle"
                                                Margin="0,0,5,0"
                                                Content="{DynamicResource BtnBurnInSubtitle}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Click="BtnBurnInSubtitle_Click" />
                                            <Button x:Name="BtnSplitVideo"
                                                Margin="0,0,5,0"
                                                Content="{DynamicResource BtnSplitVideo}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Click="BtnSplitVideo_Click" />
                                        </StackPanel>
                                    </Grid>
                                </GroupBox>
                                <GroupBox x:Name="GBWhisperFunctions"
                                    Margin="5,127,0,0"
                                    Header="{DynamicResource GBWhisperFunctions}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Height="294"
                                    Width="450">
                                    <Grid>
                                        <Label x:Name="LWhisperModel" 
                                            Margin="0,0,0,0"
                                            Content="{DynamicResource LWhisperModel}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"/>
                                        <ComboBox x:Name="CBWhisperModel"
                                                Margin="0,30,0,0"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Left"
                                                SelectionChanged="CBWhisperModel_SelectionChanged">
                                            <ComboBoxItem x:Name="CBIModelTinyEn" Content="Tiny En"/>
                                            <ComboBoxItem x:Name="CBIModelTiny" Content="Tiny"/>
                                            <ComboBoxItem x:Name="CBIModelBase" Content="Base"/>
                                            <ComboBoxItem x:Name="CBIModelBaseEn" Content="Base En"/>
                                            <ComboBoxItem x:Name="CBIModelSmall" Content="Small"/>
                                            <ComboBoxItem x:Name="CBIModelSmallEn" Content="Small En"/>
                                            <ComboBoxItem x:Name="CBIModelMedium" Content="Medium"/>
                                            <ComboBoxItem x:Name="CBIModelMediumEn" Content="Medium En"/>
                                            <ComboBoxItem x:Name="CBIModelLargeV1" Content="Large V1"/>
                                            <ComboBoxItem x:Name="CBIModelLarge" Content="Large"/>
                                        </ComboBox>
                                        <Label x:Name="LWhisperQuantization" 
                                            Margin="0,56,0,0"
                                            Content="{DynamicResource LWhisperQuantization}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"/>
                                        <ComboBox x:Name="CBWhisperQuantization"
                                                Margin="0,86,0,0"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Left"
                                                SelectionChanged="CBWhisperQuantization_SelectionChanged">
                                            <ComboBoxItem x:Name="CBIQuantizationNoQuantization" Content="No Quantization"/>
                                            <ComboBoxItem x:Name="CBIQuantizationQ4_0" Content="Q4_0"/>
                                            <ComboBoxItem x:Name="CBIQuantizationQ4_1" Content="Q4_1"/>
                                            <ComboBoxItem x:Name="CBIQuantizationQ4_2" Content="Q4_2"/>
                                            <ComboBoxItem x:Name="CBIQuantizationQ5_0" Content="Q5_0"/>
                                            <ComboBoxItem x:Name="CBIQuantizationQ5_1" Content="Q5_1"/>
                                            <ComboBoxItem x:Name="CBIQuantizationQ8_0" Content="Q8_0"/>
                                        </ComboBox>
                                        <Label x:Name="LWhisperSamplingStrategy" 
                                            Margin="0,112,0,0"
                                            Content="{DynamicResource LWhisperSamplingStrategy}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"/>
                                        <ComboBox x:Name="CBWhisperSamplingStrategy"
                                                Margin="0,142,0,0"
                                                ToolTip="{DynamicResource CBWhisperSamplingStrategyTooltip}"
                                                VerticalAlignment="Top" 
                                                HorizontalAlignment="Left"
                                                SelectionChanged="CBWhisperSamplingStrategy_SelectionChanged">
                                            <ComboBoxItem x:Name="CBISamplingStrategyDefault" Content="Default"/>
                                            <ComboBoxItem x:Name="CBISamplingStrategyGreedy" Content="Greedy"/>
                                            <ComboBoxItem x:Name="CBISamplingStrategyBeamSearch" Content="Beam search"/>
                                        </ComboBox>
                                        <Label x:Name="LWhisperTranscribeLanguage" 
                                            Margin="0,168,0,0"
                                            Content="{DynamicResource LWhisperTranscribeLanguage}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"/>
                                        <ComboBox x:Name="CBWhisperLanguage"
                                            Margin="0,198,0,0"
                                            VerticalAlignment="Top" 
                                            HorizontalAlignment="Left"
                                            SelectionChanged="CBWhisperLanguage_SelectionChanged">
                                            <ComboBoxItem x:Name="CBILangAuto" Content="auto"/>
                                            <ComboBoxItem x:Name="CBILangEn" Content="en"/>
                                            <ComboBoxItem x:Name="CBILangZh" Content="zh"/>
                                            <ComboBoxItem x:Name="CBILangDe" Content="de"/>
                                            <ComboBoxItem x:Name="CBILangEs" Content="es"/>
                                            <ComboBoxItem x:Name="CBILangRu" Content="ru"/>
                                            <ComboBoxItem x:Name="CBILangKo" Content="ko"/>
                                            <ComboBoxItem x:Name="CBILangFr" Content="fr"/>
                                            <ComboBoxItem x:Name="CBILangJa" Content="ja"/>
                                            <ComboBoxItem x:Name="CBILangPt" Content="pt"/>
                                            <ComboBoxItem x:Name="CBILangTr" Content="tr"/>
                                            <ComboBoxItem x:Name="CBILangPl" Content="pl"/>
                                            <ComboBoxItem x:Name="CBILangCa" Content="ca"/>
                                            <ComboBoxItem x:Name="CBILangNl" Content="nl"/>
                                            <ComboBoxItem x:Name="CBILangAr" Content="ar"/>
                                            <ComboBoxItem x:Name="CBILangSv" Content="sv"/>
                                            <ComboBoxItem x:Name="CBILangIt" Content="it"/>
                                            <ComboBoxItem x:Name="CBILangId" Content="id"/>
                                            <ComboBoxItem x:Name="CBILangHi" Content="hi"/>
                                            <ComboBoxItem x:Name="CBILangFi" Content="fi"/>
                                            <ComboBoxItem x:Name="CBILangVi" Content="vi"/>
                                            <ComboBoxItem x:Name="CBILangIw" Content="iw"/>
                                            <ComboBoxItem x:Name="CBILangUk" Content="uk"/>
                                            <ComboBoxItem x:Name="CBILangEl" Content="el"/>
                                            <ComboBoxItem x:Name="CBILangMs" Content="ms"/>
                                            <ComboBoxItem x:Name="CBILangCs" Content="cs"/>
                                            <ComboBoxItem x:Name="CBILangRo" Content="ro"/>
                                            <ComboBoxItem x:Name="CBILangDa" Content="da"/>
                                            <ComboBoxItem x:Name="CBILangHu" Content="hu"/>
                                            <ComboBoxItem x:Name="CBILangTa" Content="ta"/>
                                            <ComboBoxItem x:Name="CBILangNo" Content="no"/>
                                            <ComboBoxItem x:Name="CBILangTh" Content="th"/>
                                            <ComboBoxItem x:Name="CBILangUr" Content="ur"/>
                                            <ComboBoxItem x:Name="CBILangHr" Content="hr"/>
                                            <ComboBoxItem x:Name="CBILangBg" Content="bg"/>
                                            <ComboBoxItem x:Name="CBILangLt" Content="lt"/>
                                            <ComboBoxItem x:Name="CBILangLa" Content="la"/>
                                            <ComboBoxItem x:Name="CBILangMi" Content="mi"/>
                                            <ComboBoxItem x:Name="CBILangMl" Content="ml"/>
                                            <ComboBoxItem x:Name="CBILangCy" Content="cy"/>
                                            <ComboBoxItem x:Name="CBILangSk" Content="sk"/>
                                            <ComboBoxItem x:Name="CBILangTe" Content="te"/>
                                            <ComboBoxItem x:Name="CBILangFa" Content="fa"/>
                                            <ComboBoxItem x:Name="CBILangLv" Content="lv"/>
                                            <ComboBoxItem x:Name="CBILangBn" Content="bn"/>
                                            <ComboBoxItem x:Name="CBILangSr" Content="sr"/>
